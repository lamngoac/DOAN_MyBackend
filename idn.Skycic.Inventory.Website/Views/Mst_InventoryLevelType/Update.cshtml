@model Mst_InventoryLevelType
@{
    ViewBag.Title = "Sửa cấp kho";
    Layout = null;
}

<div class="modal-dialog" style="width: 600px; max-width: 600px;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel"><b>Sửa cấp kho</b></h2>
            <a href="javascript:;" onclick="ClosePopupUpdate()" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></a>
        </div>
        <div class="modal-body" style="">
            <div class="col-12">
                @using (Html.BeginForm("Edit", "Mst_Product", FormMethod.Post, new { id = "manageForm", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="col-12 layout-bot-top-16">
                        <div class="col-12">
                            <div class="form-group margin-bottom-9">
                                <label for="InvLevelType" class="col-3 control-label no-padding-right font-weight-500 ">@("Mã cấp kho".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-9">
                                    <input type="text" name="InvLevelType" id="InvLevelType" class="col-12 disabled-fix" value="@Model.InvLevelType">
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="InvLevelTypeName" class="col-3 control-label no-padding-right font-weight-500 ">@("Tên cấp kho".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-9">
                                    <input type="text" name="InvLevelTypeName" id="InvLevelTypeName" class="col-12" value="@Model.InvLevelTypeName">
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="FlagActive" class="col-3 control-label no-padding-right font-weight-500">@("Trạng thái".HtmlItemString("inventory"))</label>
                                @{
                                    var ckb = "";
                                    if (!CUtils.IsNullOrEmpty(Model.FlagActive))
                                    {
                                        if (Model.FlagActive.Equals("1"))
                                        {
                                            ckb = "checked";
                                        }
                                    }
                                }
                                <div class="col-9">
                                    <span class="block input-icon input-icon-right padding-top-5">
                                        <label class="lbl-flag">
                                            <input name="FlagActive" id="FlagActive" class="icon-flag" type="checkbox" value="1" @ckb>
                                            <span class="lbl"></span>
                                            <input name="FlagActive" type="hidden" value="0">
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="col-12 text-center">
                            @RenderItemFormat("BTN_CAP_KHO_SUA", "<a href=\"javascript: void(0); \" class=\"btn btn-nc-button\" onclick=\"SaveDataUpdate();\"><i class=\"fas fa-save\" aria-hidden=\"true\"></i> Lưu</a>", "", "")
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="@Url.Content("~/Scripts/mine/Mst_InventoryLevelType.js")"></script>
    
}
