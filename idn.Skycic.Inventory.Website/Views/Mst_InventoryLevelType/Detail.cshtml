@model Mst_InventoryLevelType
@{
    ViewBag.Title = "Chi tiết cấp kho";
    Layout = null;
}

<div class="modal-dialog" style="width: 600px; max-width: 600px;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel"><b>Chi tiết cấp kho</b></h2>
            <a href="javascript:;" onclick="ClosePopupDetail()" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></a>
        </div>
        <div class="modal-body" style="">
            <div class="col-12">
                <div class="col-12 layout-bot-top-16">
                    <div class="col-12">
                        <div class="form-group margin-bottom-9">
                            <label for="InvLevelType" class="col-3 control-label no-padding-right font-weight-500">@("Mã cấp kho".HtmlItemString("inventory"))</label>
                            <div class="col-9">
                                <input type="text" name="InvLevelType" id="InvLevelType" class="col-12 disabled-fix" value="@Model.InvLevelType">
                            </div>
                        </div>
                        <div class="form-group margin-bottom-9">
                            <label for="InvLevelTypeName" class="col-3 control-label no-padding-right font-weight-500">@("Tên cấp kho".HtmlItemString("inventory"))</label>
                            <div class="col-9">
                                <input type="text" name="InvLevelTypeName" id="InvLevelTypeName" class="col-12 disabled-fix" value="@Model.InvLevelTypeName">
                            </div>
                        </div>
                        <div class="form-group margin-bottom-9">
                            <label for="FlagActive" class="col-3 control-label no-padding-right font-weight-500">Trạng thái</label>
                            @{
                                var ckb = "";
                                if (!CUtils.IsNullOrEmpty(Model.FlagActive))
                                {
                                    if (Model.FlagActive.Equals("1"))
                                    {
                                        ckb = "checked";
                                    }
                                }
                            }
                            <div class="col-9">
                                <span class="block input-icon input-icon-right padding-top-5 disabled-fix">
                                    <label class="lbl-flag">
                                        <input name="FlagActive" id="FlagActive" class="icon-flag" type="checkbox" value="1" @ckb>
                                        <span class="lbl"></span>
                                        <input name="FlagActive" type="hidden" value="0">
                                    </label>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{

}
