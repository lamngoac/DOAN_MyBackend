                        <thead>
                            <tr class="trthead">
                                @*<th class="text-center cell-50">
                                </th>*@
                                <th fieldId="INVCODE" sorttype="T" fieldName="Mã kho" fieldActive="0" class="text-left cell-150">
                                    @("Số lô".HtmlItemString("ProductLotNo"))
                                </th>
