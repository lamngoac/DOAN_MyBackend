@model Mst_Inventory
@{
    Layout = null;
    ViewBag.Title = "Chi tiết kho";
}
<div class="modal-dialog" style="width: 1000px; max-width: 1000px;">
    <div class="modal-content">
        <div class="modal-header">
            <h2 class="modal-title" id="exampleModalLabel"><b>Chi tiết Kho</b></h2>
            <a href="javascript:;" onclick="ClosePopupDetail()" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></a>
        </div>
        <div class="modal-body" style="">
            <div class="col-12">
                @using (Html.BeginForm("Detail", "Mst_Inventory", FormMethod.Post, new { id = "manageForm", @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    <div class="col-12 layout-bot-top-16 row">
                        <div class="col-6">
                            <div class="form-group margin-bottom-9">
                                <label for="InvCode" class="col-sm-3 control-label no-padding-right font-weight-500 ">@("Mã kho".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-8">
                                    <input type="text" name="InvCode" id="InvCode" class="col-12" value="@Model.InvCode" readonly>
                                </div>
                            </div>
                            <div class="row form-group margin-bottom-9">
                                <label for="InvCodeParent" class="col-12 col-sm-3 control-label no-padding-right font-weight-500 ">@("Mã kho cha".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-8">
                                    <input type="text" name="InvCode" id="InvCode" class="col-12" value="@Model.InvCodeParent" readonly>
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="InvName" class="col-sm-3 control-label no-padding-right font-weight-500 ">@("Tên kho".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-8">
                                    <input type="text" name="InvName" id="InvName" class="col-12" value="@Model.InvName" readonly>
                                </div>
                            </div>
                            <div class="row form-group margin-bottom-9">
                                <label for="InvType" class="col-12 col-sm-3 control-label no-padding-right font-weight-500 ">@("Loại kho".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-8">
                                    <input type="text" name="InvCode" id="InvCode" class="col-12" value="@Model.InvType" readonly>
                                </div>
                            </div>
                            <div class="row form-group margin-bottom-9">
                                <label for="InvLevelType" class="col-12 col-sm-3 control-label no-padding-right font-weight-500 ">@("Cấp kho".HtmlItemString("inventory")) <span style="color: red;">*</span></label>
                                <div class="col-8">
                                    <input type="text" name="InvCode" id="InvCode" class="col-12" value="@Model.InvLevelType" readonly>
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="FlagActive" class="col-sm-3 control-label no-padding-right font-weight-500">@("Trạng thái".HtmlItemString("inventory"))</label>
                                <div class="col-8">
                                    @{
                                        var check = Model.FlagActive.Equals("1") ? "checked" : "";
                                    }
                                    <span class="block input-icon input-icon-right padding-top-5 disabled-fix">
                                        <label class="lbl-flag">
                                            <input name="FlagActive" id="FlagActive" class="icon-flag" type="checkbox" value="1" @check>
                                            <span class="lbl"></span>
                                            <input name="FlagActive" type="hidden" value="0">
                                        </label>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-group margin-bottom-9">
                                <label for="InvAddress" class="col-sm-3 control-label no-padding-right font-weight-500 ">@("Địa chỉ".HtmlItemString("inventory"))</label>
                                <div class="col-8">
                                    <input type="text" name="InvAddress" id="InvAddress" class="col-12" value="@Model.InvAddress" readonly>
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="InvContactName" class="col-sm-3 control-label no-padding-right font-weight-500 ">@("Người quản lý".HtmlItemString("inventory"))</label>
                                <div class="col-8">
                                    <input type="text" name="InvContactName" id="InvContactName" class="col-12" value="@Model.InvContactName" readonly>
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="InvContactEmail" class="col-sm-3 control-label no-padding-right font-weight-500 ">@("Email".HtmlItemString("inventory"))</label>
                                <div class="col-8">
                                    <input type="text" name="InvContactEmail" id="InvContactEmail" class="col-12" value="@Model.InvContactEmail" readonly>
                                </div>
                            </div>
                            <div class="form-group margin-bottom-9">
                                <label for="InvContactPhone" class="col-sm-3 control-label no-padding-right font-weight-500 ">@("Điện thoại".HtmlItemString("inventory"))</label>
                                <div class="col-8">
                                    <input type="text" name="InvContactPhone" id="InvContactPhone" class="col-12" value="@Model.InvContactPhone" readonly>
                                </div>
                            </div>
                            <div class="row form-group margin-bottom-9">
                                <label for="FlagIn_Out" class="col-12 col-sm-3 control-label no-padding-right font-weight-500">@("Flag kho nhập/xuất".HtmlItemString("inventory"))</label>
                                <div class="col-12 col-sm-8">
                                    <span class="block input-icon input-icon-right">
                                        <select class="select2-selection" name="FlagIn_Out" id="FlagIn_Out" disabled>
                                            <optgroup label="">
                                                <option value="0" @(Model.FlagIn_Out.Equals("0") ? "selected" : "")>0</option>
                                                <option value="1" @(Model.FlagIn_Out.Equals("1") ? "selected" : "")>1</option>
                                            </optgroup>
                                        </select>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
