@using System.Globalization
@model List<Sys_UserInGroup>
@{
    Layout = null;
    var totalRow = 0;
    var totalRowActive = 0;
    var totalRowInactive = 0;
}
<table id="dynamic-table1" class="table table-striped table-bordered table-hover table-cus">
    <thead>
        <tr>
            <th class="text-center cell-150">Mã người dùng</th>
            <th class="text-center cell-200">Tên người dùng</th>
            @*<th class="text-center cell-200">Email</th>
                <th class="text-center cell-100">Trạng thái</th>*@
        </tr>
    </thead>
    <tbody id="tbodyDtlID">
        @if (Model != null && Model.Count > 0)
        {
            totalRow = Model.Count;
            var idx = 0;
            foreach (var item in Model)
            {
                <tr class="data-item trdata" idx="@idx" usercode="@MvcHtmlString.Create(item.UserCode)">
                    <td class="text-left cell-150" style="padding-top: 15px;">
                        @MvcHtmlString.Create(item.UserCode)
                    </td>
                    <td class="text-left cell-200">
                        @MvcHtmlString.Create(item.su_UserName)
                    </td>
                    @*<td class="text-left cell-200">
                            @MvcHtmlString.Create(item.Email)
                        </td>
                        <td class="center cell-100">
                            @if (item.Enable)
                            {
                                totalRowActive += 1;
                            }
                            else
                            {
                                totalRowInactive += 1;
                            }
                            @if (item.Enable)
                            {
                                <span class="label label-sm label-success">Active</span>
                            }
                            else
                            {
                                <span class="label label-sm label-danger">Inactive</span>
                            }
                        </td>*@

                </tr>
                idx++;
            }
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        //dataTable('1', '@MvcHtmlString.Create(totalRow.ToString(CultureInfo.InvariantCulture))', '@MvcHtmlString.Create(totalRowActive.ToString(CultureInfo.InvariantCulture))', '@MvcHtmlString.Create(totalRowInactive.ToString(CultureInfo.InvariantCulture))');
        dataTable('1', '@MvcHtmlString.Create(totalRow.ToString(CultureInfo.InvariantCulture))', '', '');
    });
</script>





