        });
        $(document).ready(function () {
            //datepicker plugin
            $('#frommonth, #tomonth').datepicker({
                autoclose: true,
                todayHighlight: true,
                dateFormat: 'yy-mm',
                changeMonth: true,
                changeYear: true,
                showButtonPanel: true,
                //dateFormat: 'MM yy',
                minViewMode: "months"

            })
