                                                            @MvcHtmlString.Create(iindex.ToString())
                                                        </td>
                                                        <td class="text-center cell-120">
                                                            @MvcHtmlString.Create(specCode)
                                                        </td>
                                                        <td class="text-center cell-100">
                                                            @MvcHtmlString.Create(unitCode)
                                                        </td>
                                                        <td class="text-center cell-100">
                                                            @MvcHtmlString.Create(standardUnitCode)
                                                        </td>
                                                        <td class="text-center cell-100">
                                                            @MvcHtmlString.Create(specUnitDesc)
                                                        </td>
                                                        <td class="text-center cell-50">
                                                            @MvcHtmlString.Create(qty)
                                                        </td>
                                                        <td class="text-center cell-50">
                                                            @MvcHtmlString.Create(length)
                                                        </td>
                                                        <td class="text-center cell-50">
                                                            @MvcHtmlString.Create(width)
                                                        </td>
                                                        <td class="text-center cell-50">
                                                            @MvcHtmlString.Create(height)
                                                        </td>
                                                        <td class="text-center cell-50">
                                                            @MvcHtmlString.Create(volume)
                                                        </td>
                                                        <td class="text-center cell-50">
                                                            @MvcHtmlString.Create(weight)
                                                        </td>
                                                        <td class="text-center cell-75">
                                                            @if (flagActive.Equals("1"))
                                                            {
                                                                <span class="label label-sm label-success">Active</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="label label-sm label-danger">Inactive</span>
                                                            }

                                                        </td>
                                                        <td class="text-center cell-120">
                                                            <div class="action-buttons padding-top-2">
