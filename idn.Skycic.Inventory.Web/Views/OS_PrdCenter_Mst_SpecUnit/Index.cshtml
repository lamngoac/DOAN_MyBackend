                                                    }
                                                    var length = "";
                                                    if (!CUtils.IsNullOrEmpty(item.Length) && CUtils.IsNumeric(item.Length))
                                                    {
                                                        length = CUtils.formatNumeric(Convert.ToDouble(CUtils.StrValueOrNull(item.Length)), Nonsense.NUMERIC_DB_FORMAT);
                                                    }
                                                    var width = "";
                                                    if (!CUtils.IsNullOrEmpty(item.Width) && CUtils.IsNumeric(item.Width))
                                                    {
                                                        width = CUtils.formatNumeric(Convert.ToDouble(CUtils.StrValueOrNull(item.Width)), Nonsense.NUMERIC_DB_FORMAT);
                                                    }
                                                    var height = "";
                                                    if (!CUtils.IsNullOrEmpty(item.Height) && CUtils.IsNumeric(item.Height))
                                                    {
                                                        height = CUtils.formatNumeric(Convert.ToDouble(CUtils.StrValueOrNull(item.Height)), Nonsense.NUMERIC_DB_FORMAT);
                                                    }
                                                    var volume = "";
                                                    if (!CUtils.IsNullOrEmpty(item.Volume) && CUtils.IsNumeric(item.Volume))
                                                    {
                                                        volume = CUtils.formatNumeric(Convert.ToDouble(CUtils.StrValueOrNull(item.Volume)), Nonsense.NUMERIC_DB_FORMAT);
                                                    }
